<div class="bg-gray-50 rounded-sm p-4 shadow-sm border border-gray-200">
  <div class="flex justify-between items-center">
    <span class="text-gray-900 text-md font-medium"><%= comment.user&.name || "Anonymous" %></span>
    <span class="text-gray-500 text-sm"><%= comment.created_at.strftime("%b %d, %Y %H:%M") %></span>
  </div>
  <hr class="border-t border-gray-300 mb-4 mt-1">
  <p class="text-gray-900 whitespace-pre-line"><%= comment.text %></p>
</div>
