<div id="<%= dom_id issue %>" class="bg-white rounded-2xl shadow-md border border-gray-200 p-6 hover:shadow-lg transition duration-200">
  <div class="justify_between_container mb-6">
    <h1 class="heading_base">
      <%= issue.project&.title || "Untitled Project" %>
    </h1>
    <div class="justify_between_container border-2 border-gray-700 rounded-lg">
      <%= link_to edit_issue_path(issue), class: "link_hover_blue mx-2 py-1", title: "Edit Issue" do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= button_to issue_path(issue), method: :delete, class: "link_hover_red mx-2 py-1", 
          data: { turbo_confirm: "Are you sure you want to delete this Issue?" },
          title: "Delete Issue" do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-4 text-sm">
    <div class="grid grid-cols-2 gap-4">
      <div class="flex">
        <span class="light_para">Issue No: </span>
        <p class="small_para ml-2"><%= issue.issue_number %></p>
      </div>
      <div class="flex">
        <span class="light_para">Created At: </span>
        <p class="small_para ml-2"><%= issue.created_at&.strftime("%b %d, %Y") %></p>
      </div>
    </div>
    <div>
      <span class="light_para">Title:</span>
      <p class="small_para"><%= issue.title %></p>
    </div>
    <% if issue.description.present? %>
      <div>
        <span class="light_para">Description:</span>
        <p class="small_para"><%= issue.description %></p>
      </div>
    <% end %>
    <div>
      <span class="light_para">Assigned To:</span>
      <p class="small_para"><%= issue.assignee&.name.presence || "Unassigned" %></p>
    </div>

    <div>
      <span class="light_para">Status:</span>
      <span class="small_para ml-2 px-2 py-1 rounded-lg 
        <%= case issue.status
          when "open" then "bg-green-100 text-green-700"
          when "on_hold" then "bg-yellow-100 text-yellow-700"
          when "in_progress" then "bg-blue-100 text-blue-700"
          when "closed" then "bg-gray-200 text-gray-700"
          else "bg-gray-100 text-gray-600"
          end %>">
        <%= issue.status.humanize %>
      </span>
    </div>
  </div>
</div>
