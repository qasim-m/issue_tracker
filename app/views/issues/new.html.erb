<% content_for :title, "New Issue" %>

<div class="container mx-auto px-4 py-8 max-w-3xl">
  <div class="bg-white p-8 rounded-lg shadow-xl border border-gray-200">
    <div class="justify_between_container">
      <div class="flex flex-col items-start">
        <h1 class="heading_base">Creating New Issue</h1>
        <p class="light_para">Fill out the details below to create a new issue in your project.</p>
      </div>
      <%= link_to "Back to Project", project_path(@project), class: "btn_outline_white py-2" %>
    </div>
    
    <div class="mx-auto w-full mt-6">
      <%= render "form", issue: @issue %>
    </div>
  </div>
</div>
