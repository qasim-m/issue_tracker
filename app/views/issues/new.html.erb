<% content_for :title, "New Issue" %>

<div class="container mx-auto px-4 py-8 max-w-3xl">
  <div class="bg-white p-8 rounded-sm shadow-xl border border-gray-200">
    <div class="flex justify-between items-center mb-6">
      <div class="flex flex-col items-start">
        <h1 class="font-semibold text-3xl text-gray-900">Creating New Issue</h1>
        <p class="text-gray-600">Fill out the details below to create a new issue in your project.</p>
      </div>
      <%= link_to "Back to Project", project_path(@project),
        class: "text-center rounded-sm px-2 py-2 border-2 border-blue-600 text-blue-500 font-semibold shadow-sm transition hover:bg-blue-600 hover:text-white" %>
    </div>
    
    <div class="mx-auto w-full">
      <%= render "form", issue: @issue %>
    </div>
  </div>
</div>
