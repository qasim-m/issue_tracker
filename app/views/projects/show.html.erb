<% content_for :title, "Project Details" %>

<div class="container mx-auto px-4 max-w-7xl space-y-10">
  <div class="bg-white p-8 rounded-2xl shadow-lg">
    <div class="justify_between_container">
      <%= link_to "Back to Projects", projects_path, class: "btn_outline_white py-2" %>
      <%= link_to "Add New Issue", new_project_issue_path(@project), class: "btn_primary py-2" %>
    </div>

    <div class="justify_between_container">
      <div class="flex flex-col mt-4">
        <h1 class="heading_base"><%= @project.title %></h1>
        <span class="light_para">Created: <%= @project.created_at.strftime("%b %d, %Y") %></span>
      </div>
      <div class="justify_between_container border-2 border-gray-700 rounded-lg">
        <%= link_to edit_project_path(@project), class: "link_hover_blue mx-2 py-1", title: "Edit Project" do %>
          <i class="fas fa-edit"></i>
        <% end %>
        <%= button_to @project, method: :delete, class: "link_hover_red mx-2 py-1", 
            data: { turbo_confirm: "Are you sure you want to delete this project?" },
            title: "Delete Project" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
    <%= render "issues_table", project: @project %>
  </div>
</div>
