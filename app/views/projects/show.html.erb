<% content_for :title, "Project Details" %>
<div class="main_container mx-auto">
  <div class="bg-white p-4 md:p-8 rounded-xl shadow-lg">
    <div class="flex justify-between items-center">
      <%= render LinkComponent.new(href: projects_path, variant: :outline) do %>
        Back to Projects
      <% end %>
      <%= render LinkComponent.new(href: new_project_issue_path(@project), variant: :secondary) do %>
        Add New Issue
      <% end %>
    </div>
    <div class="flex justify-between items-center">
      <div class="flex flex-col mt-4">
        <%= render(HeadingComponent.new(level: :h3, color: :default, weight: :bold, margin_bottom: false)) do %>
          <%= @project.title %>
        <% end %>
        <%= render ParaComponent.new(variant: :small, margin_bottom: false) do %>
          Created: <%= @project.created_at.strftime("%b %d, %Y") %>
        <% end %>
      </div>
      <div class="flex justify-between items-center border-2 border-gray-500 rounded-lg">
        <%= render(LinkComponent.new(href: edit_project_path(@project), icon: '<i class="fa fa-edit"></i>', variant: :icon_only, size: :sm)) %>
        <%= form_with url: project_path(@project), method: :delete, class: "inline" do %>
          <%= render(ButtonComponent.new(
            type: :submit,
            variant: :icon_only,
            size: :sm,
            icon: '<i class="fas fa-trash-alt"></i>',
            data: { turbo_confirm: "Are you sure you want to delete this project?" }
          )) %>
        <% end %>
      </div>
    </div>
    <%= render "issues_table", project: @project %>
  </div>
</div>
