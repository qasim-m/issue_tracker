<%= form_with(model: project, class: "space-y-6 w-full max-w-xl") do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border-l-4 border-red-500 text-red-700 px-4 py-3 rounded-lg shadow mb-6">
      <strong><%= pluralize(project.errors.count, "error") %></strong> prohibited this project from being saved:
      <ul class="list-disc ml-6 mt-2 space-y-1">
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Project Title", class: "block text-sm font-semibold text-gray-700" %>
    <%= form.text_field :title, class: [
      "mt-2 block w-full rounded-lg border px-4 py-2 shadow-sm focus:ring-2 focus:ring-indigo-500 focus:outline-none transition",
      project.errors[:title].any? ? "border-red-500" : "border-gray-300"
    ] %>
  </div>

  <div class="flex justify-start">
    <%= form.submit(project.new_record? ? "Create Project" : "Update Project",
      class: "self-end text-center rounded-sm px-5 py-2 bg-blue-500 hover:bg-blue-600 text-white font-semibold shadow-sm cursor-pointer transition transform hover:-translate-y-0.5") %>
  </div>
<% end %>
